<div class="col-md-6">
  <h3>Edit your job posting here!</h3>
    <form class="form edit-project-form a-flip-top" method="POST" action="api/jobs/{{job.id}}">
    <input type="hidden" name="_method" value="PUT">
        <div class="form-group">
            <label for="job-name">Job Name:</label>
            <input class="form-input" type="text" id="job-name" name="job-name" value="{{job.title}}"/>
        </div>
        <div class="form-group">
            <label for="salary">Salary ($):</label>
            <input class="form-input" type="number" id="salary" name="salary" value="{{job.salary}}"/>
        </div>
        <div class="form-group">
            <label for="job-desc">Description:</label>
            <textarea class="form-input" id="job-desc" name="job-desc">{{job.description}}</textarea>
        </div>
        <div class="form-group">
            <label for="job-status">Status:</label>
            <textarea class="form-input" id="status" name="job-status">{{job.status}}</textarea>
        </div>
         <div class="form-group">
            <label for="job-tag">Tag:</label>
            <input class="form-input" type="text" id="job-tag" name="tag" value="{{job.tags}}">
        </div>
        <div class="form-group">
            <button href="alljobs" type="submit" class="btn btn-primary">Update</button>
        </div>
    </form>
</div>

<script src="/js/edit.js"></script>
