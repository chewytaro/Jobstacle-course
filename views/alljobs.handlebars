<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a new job profile!!</h3>

    <form class="form new-project-form">
      <div class="form-group">
        <label for="job-name">Job Name:</label>
        <input class="form-input" type="text" id="job-name" name="job-name" />
      </div>
      <div class="form-group">
        <label for="salary">Salary ($):</label>
        <input class="form-input" type="number" id="salary" name="salary" />
      </div>
      <div class="form-group">
        <label for="job-desc">Description:</label>
        <textarea class="form-input" id="job-desc" name="job-desc"></textarea>
      </div>
      <div class="form-group">
        <label for="job-status">Status:</label>
        <textarea class="form-input" id="status" name="status"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>


   {{#if jobs.length}}
  <div class="col-md-6 project-list">
    <h3>Current Applications:</h3>

    {{#each jobs as |job|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/project/{{job.id}}">{{job.name}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{job.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/myApplications.js"></script>