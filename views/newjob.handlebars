<div class="col-md-6">
  <h3>Create a new job profile!</h3>

  <form class="form new-project-form" id="create-job-form">
    <div class="form-group">
      <label for="job-name">Job Name:</label>
      <input class="form-input" type="text" id="job-name" name="job-name" />
    </div>
    <div class="form-group">
      <label for="salary">Salary ($):</label>
      <input class="form-input" type="number" id="salary" name="salary" />
    </div>
    <div class="form-group">
      <label for="job-desc">Description:</label>
      <textarea class="form-input" id="job-desc" name="job-desc"></textarea>
    </div>
    <div class="form-group">
      <label for="job-status">Status:</label>
      <textarea class="form-input" id="status" name="status"></textarea>
    </div>
    <div class="form-group">
      <button type="submit" class="btn btn-primary">Create</button>
    </div>
  </form>
</div>

<script src="/js/myApplications.js"></script>
