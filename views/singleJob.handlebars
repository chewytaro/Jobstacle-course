<div class="text-center">

  <h1>{{title}}</h1><span>{{salary}}</span>
  <p>{{description}}</p>
  <p>{{status}}</p>
  <p>
    <a href="/reviews" class="btn btn-primary">Leave a Review</a>
  </p>

  <h2>Reviews</h2>
  {{#if reviews.length}}
    <ul>
      {{#each reviews as |review|}}
        <li>
          <p>{{review.content}}</p>
          <p>{{format_date date_created}}</p>
          <p>By: {{job.user.username}}</p>
        </li>
      {{/each}}
    </ul>
  {{else}}
    <p>No reviews yet.</p>
  {{/if}}

</div>